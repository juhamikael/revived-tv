---
import HeaderLink from "./HeaderLink.astro";

import ContactIcons from "../ContactIcons";
---

<header class="flex justify-center">
  <section class="flex items-center gap-x-8">
    <img alt="logo" src="/images/revived-logo.svg" height={60} width={60} />
    <nav class="flex font-montserrat text-white gap-x-4">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/artists">Artists</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/music">Music</HeaderLink>
      <HeaderLink href="/news">News</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <div class="flex items-center gap-x-2 ml-3">
        <ContactIcons socialMedia="spotify" client:idle />
        <ContactIcons socialMedia="instagram" client:idle />
        <ContactIcons socialMedia="youtube" client:idle />
        <ContactIcons socialMedia="discord" client:idle />
      </div>
    </nav>
  </section>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
