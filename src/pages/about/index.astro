---
import Markdown from "@astrojs/markdown-component";
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
const about = await getCollection("about");
---

<Layout>
  <section class="flex justify-center mx-4 lg:mx-0">
    {
      about.map((data) => (
        <div class="font-montserrat">
          <h2 class="text-3xl font-bold my-2 text-white">{data.data.title}</h2>
          <Markdown>
            <article class="prose prose-sm dark:prose-invert max-w-1/3 text-white ">
              {data.body}
            </article>
          </Markdown>
        </div>
      ))
    }
  </section>
</Layout>
